<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <select name="airline" id="airline-select">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport-input">Airport:</label>
    <select name="airport" id="airport-select">
      <option value="AUS">Austin</option>
      <option value="DFW">Dallas Fort Worth</option>
      <option value="DEN">Denver</option>
      <option value="LAX">Los Angeles</option>
      <option value="SAN">San Diego</option>
    </select>
    <label for="flight-no-select">Flight Number (10 - 9999):</label>
    <input type="text" name="flightNo" id="flight-no-input">
    <label for="departs">Departure Date:</label>
    <input type="date" name="departs" id="departs-input">
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>