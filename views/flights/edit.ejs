<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form
    id="new-form"
    action="/flights/<%= flight._id %>?_method=PUT"
    method="POST"
  >
    <label for="airline-input">Airline:</label>
    <select name="airline" id="airline-select">
      <option value="<%= flight.airline %>"><%= flight.airline %></option>
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport-input">Airport:</label>
    <select name="airport" id="airport-select">
      <option value="<%= flight.airport %>"><%= flight.airport %></option>
      <option value="AUS">Austin</option>
      <option value="DFW">Dallas Fort Worth</option>
      <option value="DEN">Denver</option>
      <option value="LAX">Los Angeles</option>
      <option value="SAN">San Diego</option>
    </select>
    <label for="flight-no-select">Flight Number (10 - 9999):</label>
    <input
      type="text"
      name="flightNo"
      value="<%= flight.flightNo %>"
      id="flight-no-input"
    >
    <label for="departs">Departure Date:</label>
    <input
      type="date"
      name="departs"
      value="<%= flight.departs %>"
      id="departs-input"
    >
    <button type="submit">Save Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>